<%
  resource_languages = SampleControlledVocab.where(title: 'NFDI4Health Resource Language').first.sample_controlled_vocab_terms
%>

<% description_row ||= nil %>
<% index ||= 'row-template' %>

<% field_name_prefix = "resource_descriptions[description][#{index}]" %>
<% allow_row_removal = (index == 0 ? false : true ) %>

<tr class="resource-description" data-index="<%= index-%>">

  <td>
    <div class="form-group">
      <%= f.collection_select "studyhub_resource[description_language][#{index}]", resource_languages.map(&:label), :to_s, :to_s,
                              { :include_blank => false }, :class => "form-control" %>
    </div>
  </td>

  <td>
    <div class="form-group">
      <%= f.text_area "studyhub_resource[description_text][#{index}]", :rows => 5, :class => "form-control" %>
      <%#= f.text_area "studyhub_resource[description_text][#{index}]", :rows => 5, :class => "form-control rich-text-edit" %>
    </div>
  </td>

  <td>
    <% if allow_row_removal %>
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-danger">
          Remove
          <%= check_box_tag "#{field_name_prefix}[_destroy]", '1', false,
                            class: 'destroy-row', autocomplete: 'off',id:"#{field_name_prefix}-checkbox[_destroy]" %>
        </label>
      </div>
    <% end %>

  </td>


  <% if description_row %>
    <%= hidden_field_tag("#{field_name_prefix}[id]", id) %>
  <% end %>
</tr>