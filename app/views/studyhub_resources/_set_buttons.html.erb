<%
  save_button_help_text = "You can save the data now and complete the form later by editing it."
  submit_button_help_text = 'By clicking on the button “Submit”, you confirm the correctness of the data entered and apply for registration of your resource in the NFDI4Health Task Force COVID-19 system.
  Please note, your request will be reviewed by our data quality managers.
  If the data have been entered correctly, your application will be approved and the resource will be published. If some inaccuracies are found, we will notify you of the needed changes.'

  button_disabled =   @studyhub_resource.id.nil? ?  true : false
%>


<%= submit_tag('Save',  title: save_button_help_text, class: 'btn btn-primary', name:'studyhub_resource[commit_button]', id: 'save-button', disabled: button_disabled) %>

<%= submit_tag('Submit', title: submit_button_help_text,
               class: 'btn btn-primary', name: 'studyhub_resource[commit_button]', id: 'studyhub_resource_submit_btn', disabled: button_disabled
               # :onclick => "return previewStages();"
    ) %>


<script>
    $j(document).ready(function(){
        $j('input[name="studyhub_resource[resource_json][resource_titles][title][0]').keyup(function(){
            if($j(this).val().length !=0){
                $j('#save-button').attr('disabled', false);
                $j('#studyhub_resource_submit_btn').attr('disabled', false);
            }
            else {
                $j('#save-button').attr('disabled',true);
                $j('#studyhub_resource_submit_btn').attr('disabled',true);
            }
        })
    });
</script>








